<% unless locals.empty? %>
  <%= message %>
<% end %>

<h2>Edit Task</h2>

<form action="/lists/<%= @list.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Due Date: <input type="text" name="due_date" value="<%= @list.due_date %>"></p>
  <p>Task: <input type="text" name="task" value="<%= @list.task %>"></p>
  <input type="submit" value="submit">
</form>
